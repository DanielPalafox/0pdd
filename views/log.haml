%p
  %a{:href => '/'}
    %img.logo{:src => 'https://avatars2.githubusercontent.com/u/24456188'}
%p
  %a{href: "/p?name=#{repo}"}
    = repo
%p
  Since
  = Time.at(since)
- events = log.list(since)
- if events.empty?
  %p
    There are no events yet.
- else
  %pre
    - last = nil
    - events.each do |e|
      - last = e['time'].to_i
      = "#{Time.at(e['time'])} #{e['text']}\n"
  - if last
    %p
      %a{href: "/log?name=#{repo}&since=#{last}"}
        = 'more'
